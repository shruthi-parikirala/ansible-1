pipeline{
    agent any
    stages{
        stage('create directry-1'){
            steps{
               sh 'rm -rf cloudseals-1'
               sh 'mkdir cloudseals-1'
               
                
            } 
            
        }
        stage('copy playbook'){
            steps{
               sh 'cp /home/jenkins/playbook.yml /home/jenkins/workspace/job-5/cloudseals-1'
            }
        }
        stage ('chande folder'){
            steps{
                sh 'cd /home/jenkins/workspace/job-5/cloudseals-1'
                
            }
        }
        stage ('deploy playbook'){
            steps{
                sh 'ansible-playbook /home/jenkins/workspace/job-5/cloudseals-1/playbook.yml ' 
                }
        }
    }    
        
}
